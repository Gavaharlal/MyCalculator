<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/some"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/expression"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="8dp"
        android:gravity="start"
        android:maxHeight="110dp"
        android:maxLines="3"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:columnCount="4"

        android:orientation="horizontal"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.7">

        <TextView
            android:id="@+id/B7"
            style="@style/Button"
            android:text="7" />

        <TextView
            android:id="@+id/B8"
            style="@style/Button"
            android:text="8" />

        <TextView
            android:id="@+id/B9"
            style="@style/Button"
            android:text="9" />


        <TextView
            android:id="@+id/Bdel"
            style="@style/rightColumn"
            android:text="del" />

        <TextView
            android:id="@+id/B4"
            style="@style/Button"
            android:text="4" />

        <TextView
            android:id="@+id/B5"
            style="@style/Button"
            android:text="5" />

        <TextView
            android:id="@+id/B6"
            style="@style/Button"
            android:text="6" />

        <TextView
            android:id="@+id/Bdivide"
            style="@style/rightColumn"
            android:text=" / " />


        <TextView
            android:id="@+id/B1"
            style="@style/Button"
            android:text="1" />

        <TextView
            android:id="@+id/B2"
            style="@style/Button"
            android:text="2" />

        <TextView
            android:id="@+id/B3"
            style="@style/Button"
            android:text="3" />

        <TextView
            android:id="@+id/Bmul"
            style="@style/rightColumn"
            android:text=" * " />

        <TextView
            android:id="@+id/Bdot"
            style="@style/Button"
            android:text="." />

        <TextView
            android:id="@+id/B0"
            style="@style/Button"
            android:layout_height="wrap_content"
            android:text="0" />


        <TextView
            android:id="@+id/BResult"
            style="@style/Button"
            android:layout_row="3"
            android:text="=" />


        <TextView
            android:id="@+id/Bmin"
            style="@style/rightColumn"
            android:layout_row="3"
            android:text=" - " />

        <TextView
            android:id="@+id/BLeftBrack"
            style="@style/Button"
            android:text="(" />

        <TextView
            android:id="@+id/Spaced"
            style="@style/Button"
            android:text="" />

        <TextView
            android:id="@+id/BRightBrack"
            style="@style/Button"
            android:layout_height="wrap_content"
            android:text=")" />

        <TextView
            android:id="@+id/Bplus"
            style="@style/rightColumn"
            android:layout_column="3"
            android:text=" + " />

    </GridLayout>

</android.support.constraint.ConstraintLayout>